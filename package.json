{
  "name": "@mojis/skin-tone",
  "version": "0.1.1",
  "description": "utilities to work with emoji skin tones",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@9.15.4",
  "license": "MIT",
  "homepage": "https://github.com/mojisdev/skin-tones",
  "repository": "https://github.com/mojisdev/skin-tones",
  "bugs": {
    "url": "https://github.com/mojisdev/skin-tones/issues"
  },
  "keywords": [
    "emojis",
    "emoji",
    "skin",
    "tone",
    "fitzpatrick",
    "skin-tone",
    "unicode",
    "change",
    "modify"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.15.0",
    "@types/node": "^22.10.10",
    "eslint": "^9.19.0",
    "eslint-plugin-format": "^1.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
